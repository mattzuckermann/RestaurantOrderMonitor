<br>
<div class="container">
  <div class="row">
    <div class="col-4">
      <!-- Empty div -->
    </div>
    <div class="col-4">
      <div class="row">
        <div>
          <h1>Eat Da Burger!</h1>
        </div>
        <div>
          {{!-- <img src="/assets/img/burger.PNG" alt="burger-image"> --}}
        </div>
        <div>
          <h4>Add a Burger</h4>
          <form class="create-form">
            <div class="form-group">
              <label for="ca">Burger Name:</label>
              <input type="text" id="ca" name="burger_name">
            </div>
            <button type="submit">Add Burger</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-4">
      <!-- Empty div -->
    </div>
  </div>

  <br>
  <hr>
  <br>

  <div class="row">
    <div class="col-4">
      <!-- Empty div -->
    </div>
    <div class="col-4">
      <h2>Burger List!</h2>
    </div>
    <div class="col-4">
      <!-- Empty div -->
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-6">
      <h4>Burgers that are not devoured!</h4>
      <ol>
        {{#each burgers}} {{#unless burger_devoured}} {{> burgers/burger-block hungry=true}} {{/unless}} {{/each}}
      </ol>
    </div>
    <div class="col-6">
      <h4>Burgers that are devoured!</h4>
      <ol>
        {{#each burgers}} {{#if burger_devoured}} {{> burgers/burger-block hungry=false}} {{/if}} {{/each}}
      </ol>
    </div>
  </div>
</div>