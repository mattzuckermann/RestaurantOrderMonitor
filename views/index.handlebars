<div class="container">

  <div class="row">
    <div class="col-12">
      <h1>EAT DA BURGER!!</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>

  <div class="row">
    <div class="col-12" style="text-align:center">
      <h2>Burger List!</h2>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-3">
      <h2>Burgers that are not devoured!</h2>
    </div>
    <div class="col-3">
      <ul>
        {{#each burgers}} {{#unless burger_devoured}} {{> burgers/burger-block hungry=true}} {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col-3">
      <h2>Burgers that are devoured!</h2>
    </div>
    <div class="col-3">
      <ul>
        {{#each burgers}} {{#if burger_devoured}} {{> burgers/burger-block hungry=false}} {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>